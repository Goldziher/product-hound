{
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"esModuleInterop": true,
		"incremental": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"paths": {
			"@/*": ["./src/*"],
			"testing/*": ["./testing/*"]
		},
		"resolveJsonModule": true,
		"rootDir": ".",
		"skipLibCheck": true,
		"strict": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"target": "ES2020",
		"types": ["vitest/globals"]
	},
	"exclude": ["node_modules"]
}
